<div class="section section-lv1">
<h1><%=t "activerecord.models.answer"%><%=t "Confirmation thanks and supplement" %></h1>
<%=render :partial=>'questions/question_table'%>
<%form_for @answer, :url=>replay_update_category_question_answer_path(@category, @question, @answer) do |f| -%>
<%= f.error_messages %>
<table>
  <colgroup class="title"></colgroup>
  <colgroup class="content"></colgroup>
  <tbody>
  <tr>
    <td><%= f.label :supplement_comment %></td>
    <td><%=h_br @answer.supplement_comment %><%= f.hidden_field :supplement_comment %></td>
  </tr>
  <tr>
    <td><%= f.label :thanks_comment %></td>
    <td><%=h_br @answer.thanks_comment %><%= f.hidden_field :thanks_comment %></td>
  </tr>
  <tr>
    <td></td>
    <td>
      <%= f.submit t("Register") %>
      <%=link_to t("Return"), replay_edit_category_question_answer_path(@category, @question, @answer), :class=>"button" %>
    </td>
  </tr>
  <tr><th colspan="2"><%=t "activerecord.models.answer"%></th></tr>
  <%=render :partial=>'questions/answers_rows', :locals=>{:answer=>@answer} %>
  </tbody>
</table>
<%end -%>
</div>