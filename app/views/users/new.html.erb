<div class="section section-lv1">
<h1><%=t 'Sign up'%></h1>
<% form_for :user, :url => users_path do |f| -%>
<p>登録いただくアドレスにメールを送信しますのでご確認下さい</p>
<%= error_messages_for :user %>
<p>
  <%= f.label :login %><br/>
  <%= f.text_field :login %>
</p>
<p>
  <%= f.label :email %><br/>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
</p>
<p>
  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %>
</p>
<p><%= submit_tag t('Sign up') %></p>
<% end -%>
<%= link_to t('Log in'), login_path %>
</div>